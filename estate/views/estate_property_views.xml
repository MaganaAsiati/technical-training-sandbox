<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name"> Properties </field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>


     <record id="view_estate_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Estate property" sample="1"> 
                <field name="name" string="Title" />
                <field name="postcode" string="PostCode"/>
                <field name="bedrooms" string="Bedrooms"/> 
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling price"/>
                <field name="date_availability" string="Available Form"/>
                
            </tree>
        </field>
    </record>

    <record id="view_estate_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field> 
        <field name="arch" type="xml">
          <form>
                <group>
                    <field name="name" required="1"/>
                    <field name="description" string="Description"/>
                    <field name="postcode" string="Postcode"/>
                    <field name="date_availability" string="Availability Date"/>
                    <field name="expected_price" required="1" string="Expected Price"/>
                    <field name="selling_price" readonly="1" string="Selling Price"/>
                    <field name="bedrooms" default="2"  string="Bedrooms"/>
                    <field name="living_area" string="Living Area" />
                    <field name="facades" string="Facades"/>
                    <field name="garage" string="Garage"/>
                    <field name="active" string="Active"/>
                    <field name="garden_area" string="Garden Area" />
                    <field name="garden_orientation"  string="Garden orientation"/>
                    <field name="state" string="State"/> 
                </group>
            </form>
        </field>
    </record> 

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Property Name"/>
                <field name="description" string="Description"/>
                <field name="postcode" string="Postcode"/>
                <field name="date_availability" string="Availability Date"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area"/>
                <field name="facades" string="Facades"/>
                <field name="garage" string="Garage"/>
                <field name="active" string="Active"/>
                <field name="garden_area" string="Garden Area"/>
                <field name="garden_orientation" string="Garden Orientation"/>
                <field name="state" string="State"/>
                <filter string="Available Properties" name="filter_available_properties" domain="[('state', '|', ['new', 'offer_received'])]"/>
<!-- 
                  <group expand="0" string="Group By">
                    <filter string="Postcode" context="{'group_by': 'postcode'}"/>
                </group> -->
              
            </search>
        </field>
    </record>

</odoo>
